---
import type { HeroProps } from "@types";
type Props = HeroProps;

const { name, specialty, summary, email, socialLinks } = Astro.props;

// Map social link names to SVG paths in public/
const iconMap: Record<string, string> = {
  LinkedIn: "/linkedin.svg",
  GitHub: "/github.svg",
  Portfolio: "/portfolio.svg",
  Resume: "/resume.svg",
};
---

<section class="py-24 md:py-32" id="hero">
  <h1 class="mb-1.5 font-serif text-7xl font-bold tracking-tightest text-white sm:text-8xl md:mb-0 md:text-9xl">
    {name}
  </h1>
  <p class="mb-9 font-serif text-4xl leading-[46px] font-bold tracking-tighter text-primary sm:text-5xl md:text-6xl">
    {specialty}
  </p>
  <p class="mb-16 text-base font-normal text-neutral md:text-lg">
    {summary}
  </p>

  <!-- Get in Touch Button -->
  <a
    class="inline-block rounded-full bg-primary px-8 py-5 text-sm leading-5 font-medium text-white mb-8 hover:bg-primary/90 transition"
    href={`mailto:${email}`}
  >
    Get in Touch
  </a>

  <!-- Social Links -->
  {socialLinks && socialLinks.length > 0 && (
    <div class="w-full border-t border-neutral/20 px-5 pt-5 pb-8 text-center text-white">
      <ul class="mb-5 flex flex-wrap justify-center gap-4 text-xs">
        {socialLinks.map(({ text, href }) => (
          <li>
            <a
              href={href}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center gap-2 rounded-md border border-neutral/40 px-4 py-2 hover:bg-primary hover:text-white transition"
              aria-label={text}
            >
              {iconMap[text] && (
                <img src={iconMap[text]} alt={`${text} icon`} class="w-4 h-4"/>
              )}
              <span>{text}</span>
            </a>
          </li>
        ))}
      </ul>
    </div>
  )}
</section>
